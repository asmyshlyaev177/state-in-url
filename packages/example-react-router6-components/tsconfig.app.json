{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "useDefineForClassFields": true,

    /* Bundler mode */
    "moduleDetection": "force",
    "noEmit": true,
    // "jsx": "react-jsx",

    /* Linting */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
