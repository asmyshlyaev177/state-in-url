{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "useDefineForClassFields": true,

    /* Bundler mode */
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "noEmit": true,

    /* Linting */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "../shared"]
}
