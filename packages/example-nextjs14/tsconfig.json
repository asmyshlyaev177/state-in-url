{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es2024",
    "noEmit": true,
    "plugins": [
      {
        "name": "next"
      },
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "src",
    "./*.ts",
    "./*.tsx",
    "./**/*.ts",
    "./**/*.tsx",
    "../shared",
    "./global.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
